@model List<Wardrobe.Models.CombinationSuggestion>

@{
    ViewData["Title"] = "Kombin Önerileri";
}

<h2>Kombin Önerileri</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-warning">Uygun kombin bulunamadı.</div>
}
else
{
    <div class="row">
        @foreach (var combo in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header text-center bg-light fw-bold">Stil: @combo.Top.Style</div>
                    <div class="card-body d-flex justify-content-around align-items-center">
                        <div class="text-center">
                            <img src="@combo.Top.ImagePath" class="img-thumbnail" style="max-height: 200px;" />
                            <p>@combo.Top.Description</p>
                        </div>
                        <span class="mx-3 fw-bold">+</span>
                        <div class="text-center">
                            <img src="@combo.Bottom.ImagePath" class="img-thumbnail" style="max-height: 200px;" />
                            <p>@combo.Bottom.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
