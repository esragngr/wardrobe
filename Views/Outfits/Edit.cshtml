@model Wardrobe.Models.Outfit

<h2>Kombini Düzenle</h2>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Açıklama:</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label>Yeni Resim Yükle (opsiyonel):</label>
        <input type="file" name="image" class="form-control" />
        @if (Model.ImagePath != null)
        {
            <p>Mevcut Resim:</p>
            <img src="@Model.ImagePath" width="150" />
        }
    </div>
    <button type="submit" class="btn btn-primary mt-2">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">İptal</a>
</form>
